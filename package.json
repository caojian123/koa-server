{
    "name": "member-sms-api",
    "version": "0.0.1",
    "description": "",
    "main": "index.js",
    "scripts": {
        "watch-server": "cross-env NODE_ENV=development nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
        "watch-server:prod": "cross-env NODE_ENV=production nodemon --watch 'src/**/*' -e ts,tsx --exec ts-node src/index.ts",
        "build-ts": "tsc",
        "copy-static-assets": "ts-node copyStaticAssets.ts",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "serve": "node dist/index.js",
        "build": "cross-env NODE_ENV=production npm run build-ts && npm run copy-static-assets",
        "start:stage": "cross-env NODE_ENV=development node ./index.js",
        "start:prod": "cross-env NODE_ENV=production node ./index.js",
        "heroku-postbuild": "npm run build",
        "dev": "rm -rf ./dist && ts-node ./scripts/start-dev.ts",
        "build:stage": "rm -rf ./dist && ts-node ./scripts/build.ts"
    },
    "author": "",
    "license": "MIT",
    "keywords": [
        "typescript",
        "koa2",
        "jwt",
        "rest",
        "typeORM",
        "class-validator"
    ],
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/koa": "2.0.44",
        "@types/koa-bodyparser": "^4.2.0",
        "@types/koa-helmet": "^3.1.2",
        "@types/koa-jwt": "^3.3.0",
        "@types/koa-router": "^7.0.28",
        "@types/koa__cors": "^2.2.2",
        "@types/log4js": "^2.3.5",
        "@types/mysql": "^2.15.5",
        "@types/node": "^10.7.0",
        "cross-env": "^5.2.0",
        "log4js": "^4.1.0",
        "nodemon": "^1.17.4",
        "ts-node": "^7.0.1",
        "tslint": "^5.10.0",
        "typescript": "^3.2.1"
    },
    "dependencies": {
        "@koa/cors": "^2.2.1",
        "class-validator": "^0.9.1",
        "dotenv": "^6.0.0",
        "koa": "^2.5.1",
        "koa-bodyparser": "^4.2.1",
        "koa-helmet": "^4.0.0",
        "koa-jwt": "^3.3.2",
        "koa-router": "^7.4.0",
        "mysql": "^2.16.0",
        "pg": "^7.4.3",
        "pg-connection-string": "^2.0.0",
        "reflect-metadata": "^0.1.12",
        "typeorm": "^0.2.6",
        "winston": "^3.0.0"
    }
}
